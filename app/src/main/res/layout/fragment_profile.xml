<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/backgroundColor">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:background="@drawable/top_bar_gradient"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="PERFIL"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/quicksand_bold" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/logoutBtn"
        android:background="@drawable/ic_logout"
        android:backgroundTint="@color/white"
        android:layout_toEndOf="@id/title"
        android:layout_marginTop="25dp"
        android:layout_marginStart="120dp"/>

    <ImageButton
        android:id="@+id/editBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/view2"
        android:layout_toEndOf="@+id/profileName"
        android:background="@drawable/ic_editar" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Rafael Martins"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileWorkerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileName"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand"
        android:text="123456"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/reviewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileWorkerNumber"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand_bold"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewNumber"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand"
        android:text="Revisões"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/uploadNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileWorkerNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="89dp"
        android:layout_toStartOf="@+id/reviewTitle"
        android:fontFamily="@font/quicksand_bold"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/uplaodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="47dp"
        android:layout_toStartOf="@+id/reviewTitle"
        android:fontFamily="@font/quicksand"
        android:text="Carregamentos"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/approvalNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileWorkerNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/reviewTitle"
        android:fontFamily="@font/quicksand_bold"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/approvalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="63dp"
        android:layout_toEndOf="@+id/reviewTitle"
        android:fontFamily="@font/quicksand"
        android:text="Aprovações"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/ic_folder_filled"
                android:backgroundTint="@color/orange"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadText"
                android:text="Carregamentos"
                android:fontFamily="@font/quicksand_bold"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="10dp"
                android:textSize="19sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/uploadItemsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploadText"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/icon1"
                android:fontFamily="@font/quicksand"
                android:text="3 items"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <HorizontalScrollView
                android:id="@+id/firstHorizontalScroll"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/icon1"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewUpload"
                        android:layout_width="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>



            </HorizontalScrollView>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="65dp"
                android:layout_below="@+id/firstHorizontalScroll"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/ic_folder_filled"
                android:backgroundTint="@color/orange"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewText"
                android:text="Revisões"
                android:layout_below="@+id/firstHorizontalScroll"
                android:fontFamily="@font/quicksand_bold"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:textSize="19sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewItemsText"
                android:text="3 items"
                android:layout_below="@+id/reviewText"
                android:fontFamily="@font/quicksand"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="10dp"
                android:textSize="13sp"
                android:textColor="@color/black" />

            <HorizontalScrollView
                android:id="@+id/secondHorizontalScroll"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/icon2"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewReview"
                        android:layout_width="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="65dp"
                android:layout_below="@+id/secondHorizontalScroll"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/ic_folder_filled"
                android:backgroundTint="@color/orange"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approvalText"
                android:text="Aprovamentos"
                android:layout_below="@+id/secondHorizontalScroll"
                android:fontFamily="@font/quicksand_bold"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:textSize="19sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approvalItemsText"
                android:text="3 items"
                android:layout_below="@+id/approvalText"
                android:fontFamily="@font/quicksand"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="10dp"
                android:textSize="13sp"
                android:textColor="@color/black" />

            <HorizontalScrollView
                android:id="@+id/thirdHorizontalPlace"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/icon3"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewApproval"
                        android:layout_width="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>