<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentFragment"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37.6dp"
        android:background="@drawable/ic_seta"
        android:backgroundTint="@color/frejenRed" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Fatura da Continental"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/docImg"
        android:layout_width="335dp"
        android:layout_height="225dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/descCard"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_below="@+id/docImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/descTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Descrição"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/descText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksand"
            android:text="Fatura da Continental com a compra de pneus do mês"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nameCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/descCard"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/typeCard"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Nome"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="Tiago Couto"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/typeCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/descCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/typeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Tipo"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/typeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="Fatura"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/versionCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/descCard"
        android:layout_toEndOf="@id/typeCard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/versionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Versão"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="1.0"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/valueCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/nameCard"
        android:layout_toStartOf="@+id/clientCard"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/valueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Valor"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/valueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="500€"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/clientCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/nameCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/clientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Valor"
            android:textColor="@color/frejenRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/clientText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="500€"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dateCard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/nameCard"
        android:layout_toEndOf="@+id/clientCard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Data de Vencimento"
            android:textColor="@color/frejenRed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand"
            android:text="21/11/2021"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/acceptBtn"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@+id/valueCard"
        android:layout_marginStart="130dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/ic_certo"/>

    <ImageButton
        android:id="@+id/rejectBtn"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@+id/valueCard"
        android:layout_toRightOf="@+id/acceptBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/ic_rejeitar"/>

</RelativeLayout>