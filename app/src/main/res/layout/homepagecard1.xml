<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NotificationFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/view"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:strokeColor="@color/transparent"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="0dp"
        app:strokeWidth="0dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/folderBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/orange"
                android:background="@drawable/ic_folder_filled"
                app:elevation="10dp"/>

            <ImageButton
                android:id="@+id/folderOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic__dots"
                android:layout_marginTop="25dp"
                android:layout_marginStart="120dp"/>

            <TextView
                android:id="@+id/folderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faturas"
                android:layout_marginTop="70dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/folderItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/folderTitle"
                android:text="125 items"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand"
                android:textSize="12sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>