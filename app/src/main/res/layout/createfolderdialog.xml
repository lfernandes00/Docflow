<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_dialog">

    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/cross"
        android:background="@drawable/ic_cross"
        android:layout_marginTop="20dp"
        android:translationX="220dp"
        />

    <ImageView
        android:id="@+id/folderImg"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_folder_filled"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameTextField"
        android:layout_below="@id/folderImg"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Nome da pasta">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/nameTextField"
        android:background="@drawable/rounded_buttons"
        android:backgroundTint="@color/frejenRed"
        android:layout_marginTop="10dp"
        android:text="ConcluÃ­do"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="13sp"
        />


</RelativeLayout>